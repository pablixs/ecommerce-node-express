<%- include('../templates/nav.ejs')  %> 
<section class="overflow-hidden pt-16">
    <div class="flex flex-row-reverse min- overflow-hidden">
        <div class="relative flex-1 hidden w-0 overflow-hidden lg:block">
            <img class="absolute inset-0 object-cover w-full h-full bg-black" src="./images/bg02.jpg" alt="">
        </div>
        <div class="flex flex-col justify-center flex-1 px-4 py-12 overflow-hidden sm:px-6 lg:flex-none lg:px-20 xl:px-24">
            <div class="w-full max-w-xl mx-auto lg:w-96">
                <div>
                    <a href="/" class="text-primary text-medium">Bouvier Artesanal</a>
                    <h2 class="mt-6 text-3xl font-extrabold text-neutral-600">Registrarme.</h2>
                </div>

                <div class="text-sm my-2 text-info">
                    <a href="./login">¿Ya tenes una cuenta? Iniciá sesión aquí.</a>
                </div>

                <div class="mt-8">
                    <div class="mt-6">
                        <form action="./auth/register" method="POST" class="space-y-6">
                            <div class="grid grid-cols-1 gap-2 lg:grid-cols-2">
                                <div>
                                    <label for="name" class="block text-sm font-medium text-neutral-600"> Nombre </label>
                                    <div class="mt-1">
                                        <input id="name" name="first_name" type="text" required placeholder="Tu nombre" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300">
                                    </div>
                                </div>
                                <div class="space-y-1">
                                    <label for="last_name" class="block text-sm font-medium text-neutral-600"> Apellido </label>
                                    <div class="mt-1">
                                        <input id="last_name" name="last_name" type="text" required placeholder="Tu apellido" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300">
                                    </div>
                                </div>
                                <div>
                                    <label for="phone" class="block text-sm font-medium text-neutral-600"> Teléfono(WhatsApp) </label>
                                    <div class="mt-1">
                                        <input id="phone" name="phone" type="number" required placeholder="1171102854" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300">
                                    </div>
                                </div>
                                <div class="space-y-1">
                                    <label for="password" class="block text-sm font-medium text-neutral-600"> Contraseña </label>
                                    <div class="mt-1">
                                        <input id="password" name="password" type="password" required placeholder="Tu apellido" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300">
                                    </div>
                                </div>
                                <div class="space-y-1 col-span-2">
                                    <label for="email" class="block text-sm font-medium text-neutral-600"> Email </label>
                                    <div class="mt-1">
                                        <input id="email" name="email" type="email" required placeholder="lalolanda@ejemplo.com" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300">
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-primary rounded-xl hover:bg-primary-focus focus:outline-none">Registrarme</button>
                            </div>
                        </form>
                        <div class="relative my-4">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../templates/footer.ejs')  %> 